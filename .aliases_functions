prepend() { awk '{print "'$1'"$0}' }
append() { awk '{print $0"'$1'"}' }

# Show frequency table
frequency() { sort | uniq -c | sort -nr }

# returns a default value if STDIN is empty, otherwise return STDIN
default() {
    grep . || echo $1
    #  awk '{print ($0 == "" ? "'$1'" : $0)}'
}

